// Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+shift+b",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.closeSidebar",
                "workbench.action.closePanel",
                // "workbench.action.closeAuxiliaryBar" // close copilot chat
            ]
        }
    },
    {
        "key": "cmd+l",
        "command": "runCommands",
        "args": {
            "commands": [
                "github.copilot.chat.attachSelection",
                // "workbench.action.closeAuxiliaryBar" // close copilot chat
            ]
        }
    },
    {
        "key": "cmd+k s d",
        "command": "runCommands",
        "args": {
            "commands": [
                "sortLines.sortLines",
                "sortLines.removeDuplicateLines"
                // "workbench.action.closeAuxiliaryBar" // close copilot chat
            ]
        }
    },
    {
        "key": "shift+alt+l",
        "command": "github.copilot.chat.attachSelection"
    },
    {
        "key": "ctrl+alt+`",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "ctrl+cmd+-",
        "command": "workbench.action.openPreviousRecentlyUsedEditor"
    },
    {
        "key": "ctrl+cmd+=",
        "command": "workbench.action.openNextRecentlyUsedEditor"
    },
    {
        "key": "alt+c",
        "command": "editor.action.focusPreviousCursor"
    },
    {
        "key": "cmd+k p",
        "command": "extension.multiCommand.execute",
        "args": {
            "sequence": [
                "cursorWordEndRightSelect",
                "editor.action.transformToPascalcase",
                "cursorRight"
            ]
        }
    },
    {
        "key": "cmd+k c",
        "command": "editor.action.transformToCamelcase",
    },
    {
        "key": "cmd+k s",
        "command": "editor.action.transformToSnakecase",
    },
    {
        "key": "cmd+k l",
        "command": "editor.action.transformToLowercase",
    },
    {
        "key": "cmd+k u",
        "command": "editor.action.transformToUppercase",
    },
    {
        "key": "cmd+k cmd+d",
        "command": "runCommands",
        "args": {
            "commands": [
                "editor.action.sortLinesAscending",
                "editor.action.removeDuplicateLines",
            ]
        }
    },
    {
        "key": "cmd+k cmd+r",
        "command": "-workbench.action.keybindingsReference"
    },
    {
        "key": "cmd+k cmd+r",
        "command": "revealFileInOS"
    },
    {
        "key": "alt+e",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "cmd+k q",
        "command": "workbench.action.chat.open",
        "when": "!chatSetupDisabled && !chatSetupHidden"
    },
    {
        "key": "ctrl+cmd+i",
        "command": "-workbench.action.chat.open",
        "when": "!chatSetupDisabled && !chatSetupHidden"
    },
    {
        "key": "cmd+k a",
        "command": "workbench.panel.chat",
        "when": "workbench.panel.chat.view.copilot.active"
    },
    {
        "key": "ctrl+cmd+i",
        "command": "-workbench.panel.chat",
        "when": "workbench.panel.chat.view.copilot.active"
    },
    {
        "key": "ctrl+cmd+i",
        "command": "workbench.action.toggleAuxiliaryBar"
    },
    {
        "key": "alt+cmd+b",
        "command": "-workbench.action.toggleAuxiliaryBar"
    },
    {
        "key": "cmd+.",
        "command": "-docs.write",
        "when": "editorTextFocus && config.docwriter.hotkey.mac == 'âŒ˜ + .' && editorLangId =~ /typescript|javascript|python|php|java|c|cpp|csharp|dart|ruby|go|rust/"
    },
    {
        "key": "ctrl+d",
        "command": "editor.debug.action.selectionToRepl",
        "when": "editor.hasSelection && editorTextFocus && !inDebugRepl"
    },
    {
        "key": "alt+-",
        "command": "cursorUndo",
        "when": "editorTextFocus && !inDebugRepl"
    },
    {
        "key": "alt+shift+-",
        "command": "cursorRedo",
        "when": "editorTextFocus && !inDebugRepl"
    },
    {
        "key": "ctrl+cmd+i",
        "command": "workbench.panel.chat.view.copilot.focus",
        "when": "!chatInputHasFocus"
    }
]
